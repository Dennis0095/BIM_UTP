<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    tools:context=".mvvm.view.enviarDinero.EnviarDineroActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clStepBody"
        android:paddingEnd="40dp"
        android:paddingStart="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clStep"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clStep1body"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingStart="12sp"
                android:paddingEnd="12sp"
                android:elevation="2dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rect_step"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/textcolor"
                    android:textStyle="bold"
                    android:id="@+id/tvCelularDestino"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="Celular del destino"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:background="@drawable/rect_input"
                    android:id="@+id/etCelular"
                    android:ems="8"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvCelularDestino"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginTop="12dp"
                    android:id="@+id/tvIngresaMonto"
                    app:layout_constraintTop_toBottomOf="@+id/etCelular"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="Ingresa el monto que deseas mandar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:background="@drawable/rect_input"
                    android:id="@+id/etMonto"
                    android:ems="8"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvIngresaMonto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginTop="12dp"
                    android:id="@+id/tvColocaMotivo"
                    app:layout_constraintTop_toBottomOf="@+id/etMonto"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="Coloca el motivo de su operaciÃ³n"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:background="@drawable/rect_input"
                    android:id="@+id/etMotivo"
                    android:ems="8"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvColocaMotivo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/clStep1body"
                android:background="@drawable/rect_btn"
                android:text="Continuar"
                android:layout_width="0dp"
                android:layout_height="35dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clStep"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clToolbar">

        <TextView
            android:id="@+id/tvUno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circulo_active"
            android:paddingStart="10dp"
            android:paddingTop="4dp"
            android:paddingEnd="10dp"
            android:paddingBottom="4dp"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:background="@color/fondoCirculo"
            app:layout_constraintBottom_toBottomOf="@id/tvUno"
            app:layout_constraintEnd_toStartOf="@id/tvDos"
            app:layout_constraintStart_toEndOf="@+id/tvUno"
            app:layout_constraintTop_toTopOf="@id/tvUno" />

        <TextView
            android:id="@+id/tvDos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circulo_disabled"
            android:paddingStart="10dp"
            android:paddingTop="4dp"
            android:paddingEnd="10dp"
            android:paddingBottom="4dp"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvTres"
            app:layout_constraintStart_toEndOf="@+id/tvUno" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:background="@color/fondoCirculo"
            app:layout_constraintBottom_toBottomOf="@id/tvDos"
            app:layout_constraintEnd_toStartOf="@id/tvTres"
            app:layout_constraintStart_toEndOf="@+id/tvDos"
            app:layout_constraintTop_toTopOf="@id/tvDos" />

        <TextView
            android:id="@+id/tvTres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circulo_disabled"
            android:paddingStart="10dp"
            android:paddingTop="4dp"
            android:paddingEnd="10dp"
            android:paddingBottom="4dp"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clToolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/alternatelogo" />

        <TextView
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mandaPlata"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/imageView4"
            app:layout_constraintTop_toTopOf="@id/imageView4" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>