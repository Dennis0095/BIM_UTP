                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Escoge tu operador celular"
                    android:textAlignment="textStart"
                    android:textSize="16sp"
                    android:textStyle="bold">

                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/ic_rectangle"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/spinnerOperadores"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="48dp"
                        android:spinnerMode="dropdown"
                        android:textStyle="bold">

                    </androidx.appcompat.widget.AppCompatSpinner>
                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Ingresa tu DNI y digito verificador"
                    android:textAlignment="textStart"
                    android:textSize="16sp"
                    android:textStyle="bold">

                </TextView>

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/dniUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="@drawable/ic_rectangle"
                    android:hint="DNI"
                    android:paddingStart="10dp"
                    android:inputType="number"
                    android:maxLength="8"
                    android:minHeight="48dp"
                    android:textAlignment="textStart"
                    android:textStyle="bold">

                </com.google.android.material.textfield.TextInputEditText>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/codDNIUsuario"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_rectangle"
                        android:hint="0"
                        android:maxLength="1"
                        android:paddingStart="10dp"
                        android:inputType="number"
                        android:minHeight="48dp"
                        android:textAlignment="textStart"
                        android:textStyle="bold">

                    </com.google.android.material.textfield.TextInputEditText>

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/ic_baseline_info_24">

                    </ImageView>
                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Escoge la entidad financiera"
                    android:textAlignment="textStart"
                    android:textSize="16sp"
                    android:textStyle="bold">

                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/ic_rectangle"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/spinnerEntidades"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:entries="@array/bancos"
                        android:minHeight="48dp"
                        android:spinnerMode="dropdown"
                        android:textStyle="bold">

                    </androidx.appcompat.widget.AppCompatSpinner>
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/boton2"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/ic_rectangle"
                    android:backgroundTint="#564AA0"
                    android:text="Continuar"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold">

                </androidx.appcompat.widget.AppCompatButton>
            </LinearLayout>
        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>